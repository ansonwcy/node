{    
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "declaration": false,
        "baseUrl": ".",        
        "paths": {
            "@ijstech/*": ["*", "../packages/*"]
        }
    },
    "include": ["package"]
}